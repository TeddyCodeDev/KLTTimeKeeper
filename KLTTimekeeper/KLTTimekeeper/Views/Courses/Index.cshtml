@model IEnumerable<KLTTimekeeper.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h2>Courses</h2>

@*Create use cases for if user is student or instructor*@
<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="Register">Register</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.InstructorID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InstructorID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CourseID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CourseID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CourseID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
